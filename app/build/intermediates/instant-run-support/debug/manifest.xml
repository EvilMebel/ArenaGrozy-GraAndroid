            android:name="pl.pwr.rafalz.arenagrozy.MenuActivity"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.pwr.rafalz.arenagrozy.StatsActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="pl.pwr.rafalz.arenagrozy.LevelsActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="pl.pwr.rafalz.arenagrozy.GameActivity"
