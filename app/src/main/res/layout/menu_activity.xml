<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_repeat"
    tools:context="${relativePackage}.${activityClass}" >

    <pl.pwr.rafalz.arenagrozy.view.FullTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/padding_gigant"
        android:text="@string/app_name"
        android:textSize="30sp" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
    <Button
        android:id="@+id/menu_levels"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:layout_weight="1"
        android:onClick="openLevels"
        android:paddingLeft="@dimen/padding_extra_huge"
        android:paddingRight="@dimen/padding_extra_huge"
        android:text="@string/menu_levels" />

    <Button
        android:id="@+id/menu_stats"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:layout_weight="1"
        android:text="@string/menu_stats"
        android:paddingLeft="@dimen/padding_extra_huge"
        android:paddingRight="@dimen/padding_extra_huge"
        android:onClick="openStats" />

    <Button
        android:id="@+id/menu_music"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:layout_weight="1"
        android:onClick="changeMusic"
        android:paddingLeft="@dimen/padding_extra_huge"
        android:paddingRight="@dimen/padding_extra_huge"
        android:text="@string/menu_music_on" />

    <Button
        android:id="@+id/menu_sound"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:layout_weight="1"
        android:onClick="changeSound"
        android:paddingLeft="@dimen/padding_extra_huge"
        android:paddingRight="@dimen/padding_extra_huge"
        android:text="@string/menu_sound_on" />

    </LinearLayout>
</LinearLayout>