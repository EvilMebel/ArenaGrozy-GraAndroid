<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_go"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_small"
    android:background="@drawable/outline_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    <pl.pwr.rafalz.arenagrozy.view.FullTextView
        android:id="@+id/level_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1" 
        android:layout_weight="1"
        android:textAllCaps="true"
        android:gravity="center"/>

    
    <pl.pwr.rafalz.arenagrozy.view.StarsView
        android:id="@+id/level_stars" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/level_locked"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_clear_black_24dp" />

    
    </LinearLayout>

</RelativeLayout>